---
import Layout from "../layouts/Layout.astro";
import { Content as IntroContent } from "./intro.md";
import { Content as PersonalContent } from "./personal.md";
import { Content as SocialismContent } from "./socialism.md";
import { Content as MutualAidContent } from "./mutual-aid.md";
import { Content as NgosContent } from "./ngos.md";
---

<Layout
  title="Timothy Brits"
  description="Links and ways to connect with Timothy Brits - social profiles, and more."
  type="website"
>
  <main>
    <IntroContent />
    <PersonalContent />
    <SocialismContent />
    <MutualAidContent />
    <NgosContent />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 512px;
    background: var(--color-card-bg);
    border-radius: 12px;
    border: 1px solid var(--color-border);
    box-shadow: 0 4px 12px var(--shadow-card);
  }

  :global(h1) {
    text-align: center;
    color: var(--color-heading);
    margin-bottom: 1rem;
    font-weight: 700;
    font-size: 2.25rem;
    text-shadow: 0 2px 4px var(--shadow-text);
  }

  :global(h1 + p) {
    text-align: center;
    color: var(--color-text);
    margin-bottom: 3rem;
  }

  :global(.section-personal),
  :global(.section-socialism),
  :global(.section-mutual-aid),
  :global(.section-ngos) {
    margin-top: 2rem;
  }

  :global(.section-personal:first-of-type) {
    margin-top: 0;
  }

  :global(h2) {
    text-align: left;
    color: var(--color-heading);
    margin: 0 0 0.5rem 0;
    font-weight: 600;
    font-size: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 3px solid currentColor;
    position: relative;
  }

  :global(.section-personal h2) {
    color: var(--color-personal);
  }
  :global(.section-socialism h2) {
    color: var(--color-socialism);
  }
  :global(.section-mutual-aid h2) {
    color: var(--color-mutual-aid);
  }
  :global(.section-ngos h2) {
    color: var(--color-ngos);
  }

  :global(h2 + p) {
    text-align: left;
    color: var(--color-text-secondary);
    margin-bottom: 1.25rem;
    font-size: 0.95rem;
  }

  :global(ul) {
    list-style-type: none;
    padding: 0;
    margin-bottom: 2rem;
  }

  :global(li) {
    margin-bottom: 0.85rem;
  }

  :global(a) {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    background: linear-gradient(
      135deg,
      var(--color-card-bg) 0%,
      color-mix(in srgb, var(--color-card-bg) 95%, #ffffff 5%) 100%
    );
    border-radius: 8px;
    text-decoration: none;
    color: var(--color-text);
    border: 1px solid var(--color-border);
    transition:
      background 0.3s cubic-bezier(0.34, 1.56, 0.64, 1),
      border-color 0.3s ease,
      color 0.3s ease,
      transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1),
      box-shadow 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    box-shadow:
      0 2px 4px var(--shadow-primary),
      0 0 0 0 transparent;
    position: relative;
  }

  :global(a::before) {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 8px;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0) 0%,
      rgba(255, 255, 255, 0.05) 100%
    );
    pointer-events: none;
    transition: opacity 0.3s ease;
    opacity: 0;
  }

  :global(a:hover) {
    background: linear-gradient(
      135deg,
      var(--color-bg) 0%,
      color-mix(in srgb, var(--color-bg) 90%, #ffffff 10%) 100%
    );
    text-decoration: none;
    transform: translateY(-4px) scale(1.02);
    box-shadow:
      0 8px 20px var(--shadow-primary-hover),
      0 0 24px color-mix(in srgb, var(--color-accent) 15%, transparent);
  }

  :global(a:hover::before) {
    opacity: 1;
  }

  :global(a i) {
    font-size: 1.35em;
    flex: 0 0 1.4em;
    line-height: 1;
    text-align: center;
    color: var(--color-text-secondary);
    transition: color 0.3s ease;
  }

  :global(a span) {
    flex-grow: 1;
    text-align: center;
  }

  :global(.section-personal a) {
    border-color: var(--color-personal);
    background: linear-gradient(
      135deg,
      var(--color-card-bg) 0%,
      color-mix(in srgb, var(--color-card-bg) 90%, var(--color-personal) 10%)
        100%
    );
  }
  :global(.section-personal a:hover) {
    border-color: var(--color-personal-light);
    background: linear-gradient(
      135deg,
      color-mix(in srgb, var(--color-bg) 95%, var(--color-personal) 5%) 0%,
      color-mix(in srgb, var(--color-bg) 85%, var(--color-personal) 15%) 100%
    );
    box-shadow:
      0 8px 20px var(--shadow-primary-hover),
      0 0 32px color-mix(in srgb, var(--color-personal) 30%, transparent);
    color: var(--color-personal);
  }
  :global(.section-personal a:hover i) {
    color: var(--color-personal);
  }

  :global(.section-socialism a) {
    border: 3px solid var(--color-socialism);
    padding: 0.65rem 0.95rem;
    background: linear-gradient(
      135deg,
      var(--color-card-bg) 0%,
      color-mix(in srgb, var(--color-card-bg) 85%, var(--color-socialism) 15%)
        100%
    );
  }
  :global(.section-socialism a:hover) {
    border-color: var(--color-socialism-light);
    background: linear-gradient(
      135deg,
      color-mix(in srgb, var(--color-bg) 90%, var(--color-socialism) 10%) 0%,
      color-mix(in srgb, var(--color-bg) 75%, var(--color-socialism) 25%) 100%
    );
    box-shadow:
      0 8px 20px var(--shadow-primary-hover),
      0 0 32px color-mix(in srgb, var(--color-socialism) 35%, transparent);
    color: var(--color-socialism);
  }
  :global(.section-socialism a:hover i) {
    color: var(--color-socialism);
  }

  :global(.section-mutual-aid a) {
    border-color: var(--color-mutual-aid);
    background: linear-gradient(
      135deg,
      color-mix(in srgb, var(--color-card-bg) 85%, var(--color-mutual-aid) 15%)
        0%,
      color-mix(in srgb, var(--color-card-bg) 75%, var(--color-mutual-aid) 25%)
        100%
    );
  }
  :global(.section-mutual-aid a:hover) {
    border-color: var(--color-mutual-aid-light);
    background: linear-gradient(
      135deg,
      color-mix(in srgb, var(--color-bg) 80%, var(--color-mutual-aid) 20%) 0%,
      color-mix(in srgb, var(--color-bg) 65%, var(--color-mutual-aid) 35%) 100%
    );
    box-shadow:
      0 8px 20px var(--shadow-primary-hover),
      0 0 32px color-mix(in srgb, var(--color-mutual-aid) 35%, transparent);
    color: var(--color-mutual-aid);
  }
  :global(.section-mutual-aid a:hover i) {
    color: var(--color-mutual-aid);
  }

  :global(.section-ngos a) {
    border-color: var(--color-ngos);
    background: linear-gradient(
      135deg,
      var(--color-card-bg) 0%,
      color-mix(in srgb, var(--color-card-bg) 90%, var(--color-ngos) 10%) 100%
    );
  }
  :global(.section-ngos a i) {
    color: var(--color-ngos);
  }
  :global(.section-ngos a:hover) {
    border-color: var(--color-ngos-light);
    background: linear-gradient(
      135deg,
      color-mix(in srgb, var(--color-bg) 90%, var(--color-ngos) 10%) 0%,
      color-mix(in srgb, var(--color-bg) 80%, var(--color-ngos) 20%) 100%
    );
    box-shadow:
      0 8px 20px var(--shadow-primary-hover),
      0 0 32px color-mix(in srgb, var(--color-ngos) 30%, transparent);
    color: var(--color-ngos-light);
  }
  :global(.section-ngos a:hover i) {
    color: var(--color-ngos-light);
  }

  :global(a:focus-visible) {
    outline: 3px solid var(--color-accent);
    outline-offset: 4px;
    box-shadow: 0 0 0 4px var(--shadow-focus);
  }
</style>
